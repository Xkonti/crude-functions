{
  "tasks": {
    "setup": "deno run --allow-read --allow-write --allow-env --allow-run --allow-net scripts/setup-surreal.ts",
    "build:vendor": "deno run -A scripts/build-codemirror.ts",
    "dev": "deno task setup && deno task build:vendor && deno run --env-file=.env --watch --allow-net --allow-env --allow-read --allow-write --allow-ffi --allow-run main.ts",
    "test": "deno run -A scripts/run-tests.ts",
    "reset": "rm -rf data && mkdir data"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/dotenv": "jsr:@std/dotenv",
    "@std/expect": "jsr:@std/expect",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/testing": "jsr:@std/testing",
    "@core/asyncutil": "jsr:@core/asyncutil",
    "@da/bcrypt": "jsr:@da/bcrypt@1.0.1",
    "better-auth": "npm:better-auth@^1.4.10",
    "better-auth/plugins": "npm:better-auth@^1.4.10/plugins",
    "better-auth/plugins/access": "npm:better-auth@^1.4.10/plugins/access",
    "isomorphic-git": "npm:isomorphic-git@^1.27.2",
    "surrealdb": "npm:surrealdb@alpha"
  },
  "test": {
    "exclude": [
      "code/",
      "docs/"
    ]
  },
  "lint": {
    "exclude": [
      "code/",
      "docs/"
    ]
  }
}
