PORT=8000
MANAGEMENT_API_KEY=your-secret-key-here

# Secrets encryption key (REQUIRED)
# All secrets are encrypted at rest using AES-256-GCM
# Generate with: openssl rand -base64 32
# WARNING: Losing this key means all secrets are unrecoverable
SECRETS_ENCRYPTION_KEY=

# Log level: debug, info, warn, error, none (default: info)
LOG_LEVEL=info
# Metrics aggregation interval in seconds (default: 60)
METRICS_AGGREGATION_INTERVAL_SECONDS=60
# Number of days to retain daily metrics (default: 90)
METRICS_RETENTION_DAYS=90
# Log trimming interval in seconds (default: 300 = 5 minutes)
LOG_TRIMMING_INTERVAL_SECONDS=300
# Maximum logs to keep per route/function (default: 2000)
LOG_MAX_PER_ROUTE=2000

# Better Auth configuration
# Secret key for signing sessions (generate a long random string for production)
BETTER_AUTH_SECRET=dev-secret-change-in-production
# Base URL for the application (used for redirects and callbacks)
BETTER_AUTH_BASE_URL=http://localhost:8000
