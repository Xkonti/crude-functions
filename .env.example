# Function execution port (deployed handlers)
FUNCTION_PORT=8000

# Management port (API, Web UI, Auth)
MANAGEMENT_PORT=9000

# Authentication configuration (optional)
# Base URL for the application - used for OAuth redirects and callbacks
# If not set, auto-detects from incoming request headers (Host, X-Forwarded-*)
# Set this when behind a reverse proxy or when auto-detection is unreliable
# AUTH_BASE_URL=http://localhost:9000

# SurrealDB configuration (experimental)
# Internal port for SurrealDB server (not exposed externally)
SURREAL_PORT=5173
# Storage path for SurrealKV persistent data
SURREAL_STORAGE=./data/surreal
# Path to SurrealDB binary (use "surreal" for local dev, "/surreal" for Docker)
SURREAL_BINARY=surreal
# Root credentials for SurrealDB
SURREAL_USER=root
SURREAL_PASS=root
# Run SurrealDB experiment on startup (for verification)
# RUN_SURREAL_EXPERIMENT=true

# Test infrastructure configuration (for deno task test)
# Port for shared SurrealDB test instance (default: 54321)
# SURREAL_TEST_PORT=54321
# Credentials for test SurrealDB (default: root/root)
# SURREAL_TEST_USER=root
# SURREAL_TEST_PASS=root
# Connection timeout for detecting external instance (ms, default: 1000)
# SURREAL_TEST_TIMEOUT=1000
