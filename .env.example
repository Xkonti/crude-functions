PORT=8000

# Authentication configuration (optional)
# Base URL for the application - used for OAuth redirects and callbacks
# If not set, auto-detects from incoming request headers (Host, X-Forwarded-*)
# Set this when behind a reverse proxy or when auto-detection is unreliable
# AUTH_BASE_URL=http://localhost:8000

# Note: The following settings are now stored in the database and configured
# through the settings table. They are automatically created with defaults
# on first startup:
#
# Security:
# - api.access-groups (default: ID of "management" group)
#   Controls which API key groups can access management endpoints.
#   Create API keys via the web UI after initial admin setup.
#
# Logging:
# - log.level (default: "info")
# - log.trimming.interval-seconds (default: 300)
# - log.trimming.max-per-function (default: 2000)
#
# Metrics:
# - metrics.aggregation-interval-seconds (default: 60)
# - metrics.retention-days (default: 90)
#
# Encryption:
# - encryption.key-rotation.check-interval-seconds (default: 10800)
# - encryption.key-rotation.interval-days (default: 90)
# - encryption.key-rotation.batch-size (default: 100)
# - encryption.key-rotation.batch-sleep-ms (default: 100)
